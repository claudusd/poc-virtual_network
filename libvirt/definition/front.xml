  <name>front</name>
  <memory unit='GB'>2</memory>
  <vcpu>2</vcpu>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <boot dev='cdrom'/>
    <boot dev='hd'/>
    <bootmenu enable='yes'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type='file' device='disk'>
      <source file='/home/claude/works/git/poc-virtual_network/disk/front'/>
      <target dev='hda' bus="virtio"/>
      <driver name='qemu' type='qcow2' cache='none'/>
    </disk>
    <!-- <graphics type='vnc' port='-1' autoport='yes' listen='0.0.0.0'/> -->
    <interface type='bridge'>
      <source bridge='test_claude'/>
      <virtualport type='openvswitch'/>
      <mac address='76:2d:fb:63:1e:49'/>
    </interface>
    <interface type='bridge'>
      <source bridge='test_claude'/>
      <virtualport type='openvswitch'/>
      <mac address='76:2d:fb:63:1e:50'/>
    </interface>
    <disk type='file' device='disk'>
      <source file='/home/claude/works/git/poc-virtual_network/disk/disk1.img'/>
      <target dev='hdb' bus="virtio"/>
      <driver name='qemu' type='qcow2' cache='none'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <target dev='hdc' bus='ide'/>
